<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardPair.MenuPage"
             Title="Menu">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Text="Card Game Menu!" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="Large" />

            <ScrollView Grid.Row="1" Orientation="Vertical">
                <StackLayout>
                    <Button Text="New Game - Easy" Command="{Binding NewGameCommand}" CommandParameter="easy" />
                    <Button Text="New Game - Medium" Command="{Binding NewGameCommand}" CommandParameter="medium" />
                    <Button Text="New Game - Hard" Command="{Binding NewGameCommand}" CommandParameter="hard" />
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>